{% extends "./default.html.twig" %}
{% block body %}
    <div class="col-lg-12">
        <h1>Pages management</h1>
        <div class="row">
            <div class="col-lg-12 mb-15">
                <a class="btn btn-success"
                   href="{{ buildUriTwig('edit') }}">Create page</a>
            </div>
        </div>

        <table class="table table-condensed">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Published</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for page in data %}
            <tr>
                <td>{{ page['id'] }}</td>
                <td>{{ page['title'] }}</td>
                <td>
                    {% if(page['active'] == 1) %}
                        <h5><span class="badge badge-primary"> YES</span></h5>
                    {% else %}
                        <h5><span class="badge badge-danger">NO</span></h5>
                    {% endif %}
                </td>
                <td>
                    <a class="btn btn-md btn-success"
                       href="{{ buildUriTwig('edit', [page['id']]) }}">Edit</a>
                    <a class="btn btn-md btn-warning" onclick="return confirmDelete();"
                       href="{{ buildUriTwig('delete', [page['id']]) }}">Delete</a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
