{% extends "./default.html.twig" %}
{% block body %}
    <div class="col-lg-12">
        <h1>Create/Edit Page</h1>
        <form method="post" action="">
            <div class="form-group">
                <input class="form-control" name="title"
                    {% if data['title'] is defined %}
                       value="{{ data['title'] }}" />
                    {% else %}
                        value="" />
                    {% endif %}
            </div>
            <div class="form-group">
                <textarea rows="15" class="form-control" name="content">{% if data['content'] is defined %}{{ data['content'] }}{% endif %}</textarea>
            </div>
            <div class="form-group">
                <label for="active">Publish page</label>
                <input type="checkbox" value="1" name="active"
                    {% if data['active'] is defined and data['active'] == 1 %}
                        checked
                    {% endif %}
                />
            </div>

            <button type="submit" class="btn btn-success">Save</button>
        </form>
    </div>

{% endblock %}
