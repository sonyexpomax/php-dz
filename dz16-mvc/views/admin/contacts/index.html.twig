{% extends "./default.html.twig" %}
{% block body %}
    <div class="col-lg-12">
        <h1>Messages management</h1>
        <table class="table table-condensed">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for message in data %}
                <tr>
                    <td>{{ message['id'] }} </td>
                    <td>{{ message['name'] }} </td>
                    <td>{{ message['email'] }} </td>
                    <td>
                        <a class="btn btn-md btn-success"
                           href="{{ buildUriTwig('edit', [message['id']])}}">Edit</a>
                        <a class="btn btn-md btn-warning" onclick="return confirmDelete();"
                           href="{{ buildUriTwig('delete', [message['id']])}}"><span class="glyphicon glyphicon-remove"></span> Remove </a>
                        <span class=""></span>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


    </div>

{% endblock %}
