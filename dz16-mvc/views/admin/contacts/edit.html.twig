{% extends "./default.html.twig" %}
{% block body %}
    <div class="col-lg-12">
        <h1>Edit Message</h1>
        <form method="post" action="">
            <div class="form-group">
                <input class="form-control" name="name"
                {% if data['name'] is defined %}
                    value="{{ data['name'] }}" />
                {% else %}
                    value="" />
                {% endif %}
            </div>
            <div class="form-group">
                <input class="form-control" name="email"
                    {% if data['email'] is defined %}
                        value="{{ data['email'] }}" />
                    {% else %}
                        value="" />
                    {% endif %}
            </div>
            <div class="form-group">
                <textarea rows="15" class="form-control" name="messages">{% if data['messages'] is defined %}{{ data['messages'] }}{% endif %}</textarea>
            </div>
            <button type="submit" class="btn btn-success">Save</button>
        </form>
    </div>

{% endblock %}
